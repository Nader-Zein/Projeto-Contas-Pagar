@model Pagamento.Models.Estado

@{
    ViewData["Title"] = "Excluir Estado";
}

<h2>Excluir Estado</h2>

<h5>Tem certeza que deseja excluir o estado abaixo?</h5>

<div class="mb-3">
    <label class="form-label">Nome do Estado:</label>
    <p class="form-control-plaintext">@Model.NomeEstado</p>
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="IdEstado" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="@Url.Action("Index", "Estado")" class="btn btn-secondary">Cancelar</a>
</form>
