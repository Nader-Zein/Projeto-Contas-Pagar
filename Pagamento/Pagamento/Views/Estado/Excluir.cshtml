@model Pagamento.Models.Estado

@{
    ViewData["Title"] = "Excluir Estado";
}

<h2>Excluir Estado</h2>

<h5 class="text-danger">Tem certeza que deseja excluir este estado?</h5>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="IdEstado" />

    <div class="d-flex justify-content-end mt-3">
        <div class="d-flex justify-content-end mt-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" checked="@Model.Status" disabled />
                <label class="form-check-label">Ativo</label>
            </div>
        </div>

    </div>

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input class="form-control" value="@Model.NomeEstado" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">UF</label>
        <input class="form-control" value="@Model.Uf" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">País</label>
        <input class="form-control" value="@ViewBag.NomePais" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Data de Criação</label>
        <input type="text" class="form-control" value="@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Última Edição</label>
        <input type="text" class="form-control" value="@(Model.DataEdicao?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca editado")" disabled />
    </div>

    <div class="text-end mt-3">
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Estado")">Cancelar</a>
    </div>
</form>
