@{
    ViewData["Title"] = "Criar País";
}

@model Pagamento.Models.Pais

<div>
    <h1 class="display-4">Criar País</h1>
</div>

<form asp-action="Criar" asp-controller="Pais" method="post">
    <div class="d-flex justify-content-end mt-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Status" />
            <label class="form-check-label" asp-for="Status">Ativo</label>
        </div>
    </div>
    <label>Nome do País</label>
    <input class="form-control" type="text" placeholder="Nome do país" asp-for="NomePais" required />
    <span asp-validation-for="NomePais" class="text-danger"></span>

    @if (Model != null)
    {
        <div class="form-group mt-3">
            <label>Data de Criação</label>
            <input type="text" class="form-control" value="@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")" readonly />
        </div>

        <div class="form-group mt-2">
            <label>Última Edição</label>
            <input type="text" class="form-control" value="@(Model.DataEdicao?.ToString("dd/MM/yyyy HH:mm"))" readonly />
        </div>
    }

    <div class="text-end mt-3">
        <button class="btn btn-primary" type="submit">Salvar</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Pais")">Cancelar</a>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}