@model Pagamento.Models.Pais

<form id="formCadastrarPais">
    <div class="mb-3">

        <div class="d-flex justify-content-end mt-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Status" />
                <label class="form-check-label" asp-for="Status">Ativo</label>
            </div>
        </div>
        <label asp-for="NomePais" class="form-label">Nome do País</label>
        <input asp-for="NomePais" class="form-control" required />
        <span asp-validation-for="NomePais" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    
</form>
