@model Pagamento.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h2>Excluir Cliente</h2>

<h5 class="text-danger">Tem certeza que deseja excluir este cliente?</h5>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="IdPessoa" />

    <div class="row">
        <div class="d-flex justify-content-end mt-3">
            <div class="d-flex justify-content-end mt-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" checked="@Model.Status" disabled />
                    <label class="form-check-label">Ativo</label>
                </div>
            </div>

        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Tipo de Pessoa</label>
            <input id="TipoPessoa" class="form-control" value="@Model.TipoPessoa" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label id="labelNomeRazao" class="form-label">Nome / Razão Social</label>
            <input class="form-control" value="@Model.Nome_RazaoSocial" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label id="labelApelidoFantasia" class="form-label">Apelido / Nome Fantasia</label>
            <input type="text" class="form-control" value="@Model.Apelido_NomeFantasia" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Endereço</label>
            <input type="text" class="form-control" value="@Model.Endereco" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Número</label>
            <input type="text" class="form-control" value="@Model.Numero" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Complemento</label>
            <input type="text" class="form-control" value="@Model.Complemento" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Bairro</label>
            <input type="text" class="form-control" value="@Model.Bairro" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">CEP</label>
            <input type="text" class="form-control" value="@Model.Cep" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Cidade</label>
            <input type="text" class="form-control" value="@ViewBag.NomeCidade" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label id="labelNascimentoFundacao" class="form-label">Data de Nascimento / Fundação</label>
            <input class="form-control" type="text" value="@Model.DataNascimento_Fundacao.ToString("yyyy-MM-dd")" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label id="labelCpfCnpj" class="form-label">CPF / CNPJ</label>
            <input class="form-control" value="@Model.CPF_CNPJ" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label id="labelRgIe" class="form-label">RG / Inscrição Estadual</label>
            <input class="form-control" value="@Model.RG_InsEstadual" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" value="@Model.Email" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Telefone</label>
            <input type="text" class="form-control" value="@Model.Telefone" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Condição de Pagamento</label>
            <input class="form-control" value="@ViewBag.NomeCondicao" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Limite de Crédito</label>
            <input type="text" class="form-control" value="@Model.LimiteCredito?.ToString("C")" readonly />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Data de Criação</label>
            <input type="text" class="form-control" value="@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")" disabled />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Última Edição</label>
            <input type="text" class="form-control"
                   value="@(Model.DataEdicao?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca editado")" disabled />
        </div>
    </div>

    <div class="text-end mt-3">
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <script>
            function atualizarLabels(tipo) {
            const t = (tipo || '').toLowerCase();  

            if (t === 'física' || t === 'física') { 
                $('#labelNomeRazao').text("Nome");
                $('#labelApelidoFantasia').text("Apelido");
                $('#labelCpfCnpj').text("CPF");
                $('#labelNascimentoFundacao').text("Data de Nascimento");
                $('#labelRgIe').text("RG");
            } else {
                $('#labelNomeRazao').text("Razão Social");
                $('#labelApelidoFantasia').text("Nome Fantasia");
                $('#labelCpfCnpj').text("CNPJ");
                $('#labelNascimentoFundacao').text("Fundação");
                $('#labelRgIe').text("Inscrição Estadual");
            }
        }

        $(document).ready(function () {
            atualizarLabels($('#TipoPessoa').val());   
        });
    </script>
}
