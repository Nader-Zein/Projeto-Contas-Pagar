@model Pagamento.Models.Fornecedor

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdPessoa" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="TipoPessoa" class="form-label">Tipo de Pessoa</label>
            <select asp-for="TipoPessoa" class="form-control">
                <option value="">Selecione</option>
                <option value="Física" selected="@("Física" == Model.TipoPessoa)">Física</option>
                <option value="Jurídica" selected="@("Jurídica" == Model.TipoPessoa)">Jurídica</option>
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Nome_RazaoSocial" class="form-label">Nome / Razão Social</label>
            <input asp-for="Nome_RazaoSocial" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DataNascimento_Fundacao" class="form-label">Data de Nascimento / Fundação</label>
            <input asp-for="DataNascimento_Fundacao" type="date" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="CPF_CNPJ" class="form-label">CPF / CNPJ</label>
            <input asp-for="CPF_CNPJ" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="RG_InsMunicipal" class="form-label">RG / Inscrição Municipal</label>
            <input asp-for="RG_InsMunicipal" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="InscricaoEstadual" class="form-label">Inscrição Estadual</label>
            <input asp-for="InscricaoEstadual" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="InscricaoSubstitutoTributario" class="form-label">Inscrição Substituto Tributário</label>
            <input asp-for="InscricaoSubstitutoTributario" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Telefone" class="form-label">Telefone</label>
            <input asp-for="Telefone" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Endereco" class="form-label">Endereço</label>
            <input asp-for="Endereco" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Bairro" class="form-label">Bairro</label>
            <input asp-for="Bairro" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Cep" class="form-label">CEP</label>
            <input asp-for="Cep" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Status" class="form-label">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="">Selecione</option>
                <option value="Ativo" selected="@("Ativo" == Model.Status)">Ativo</option>
                <option value="Inativo" selected="@("Inativo" == Model.Status)">Inativo</option>
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="IdCidade" class="form-label">Cidade</label>
            <select asp-for="IdCidade" class="form-control" asp-items="ViewBag.Cidades">
                <option value="">Selecione a Cidade</option>
            </select>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
