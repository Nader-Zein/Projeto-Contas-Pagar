@{
    ViewData["Title"] = "Criar Unidade de Medida";
}

@model Pagamento.Models.UnidadeMedida

<div>
    <h1 class="display-4">Criar Unidade de Medida</h1>
</div>

<form asp-action="Criar" asp-controller="UnidadeMedida" method="post">

    <div class="d-flex justify-content-end mt-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Status" />
            <label class="form-check-label" asp-for="Status">Ativo</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <input class="form-control" asp-for="Descricao" placeholder="Ex: Litro, Metro, Unidade" required />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    

    @if (Model != null)
    {
        <div class="form-group mt-3">
            <label>Data de Criação</label>
            <input type="text" class="form-control" value="@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")" readonly />
        </div>

        <div class="form-group mt-2">
            <label>Última Edição</label>
            <input type="text" class="form-control" value="@(Model.DataEdicao?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca editado")" readonly />
        </div>
    }

    <div class="text-end mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "UnidadeMedida")">Cancelar</a>
    </div>
</form>
