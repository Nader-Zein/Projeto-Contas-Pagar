@model IEnumerable<Pagamento.Models.UnidadeMedida>

@{
    ViewData["Title"] = "Unidades de Medida";
}

<h1 class="display-4">Unidades de Medida Cadastradas</h1>

<div class="mb-3 text-end">
    <a class="btn btn-primary" href="@Url.Action("Criar", "UnidadeMedida")">+ Nova Unidade de Medida</a>
</div>

@if (!Model.Any())
{
    <p class="text-muted">Nenhuma unidade de medida cadastrada.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Descrição</th>
                <th>Status</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unidade in Model)
            {
                <tr>
                    <td>@unidade.Descricao</td>
                    <td>
                        @if (unidade.Status)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Desativado</span>
                        }
                    </td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning" href="@Url.Action("Editar", "UnidadeMedida", new { id = unidade.IdUnidadeMedida })">Editar</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Excluir", "UnidadeMedida", new { id = unidade.IdUnidadeMedida })">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
